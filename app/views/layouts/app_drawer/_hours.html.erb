<ul class="mdc-list mdc-list--two-line" data-controller="time-sync">
  <%- zone =  Time.zone.now.strftime("%Z") -%>
  <li class="mdc-list-item">
    <span class="mdc-list-item__text">
      <span class="mdc-list-item__primary-text">Monday - Thursday</span>
      <span class="mdc-list-item__secondary-text">
        <span
          data-target="time-sync.date"
          data-utc="<%= Time.zone.parse("10:00:00").utc.strftime("%s%L") %>"
          data-unicode-format="h aaa"
        >
          10 AM
        </span>
        -
        <span
          data-target="time-sync.date"
          data-utc="<%= Time.zone.parse("16:00:00").utc.strftime("%s%L") %>"
          data-unicode-format="h aaa"
        >
          4 PM
        </span>
        <span
          data-target="time-sync.date"
          data-utc="<%= Time.zone.now.utc.strftime("%s%L") %>"
          data-unicode-format="(zzz)"
        >(<%= zone %>)</span>
      </span>
    </span>
  </li>
  <li class="mdc-list-item">
    <span class="mdc-list-item__text">
      <span class="mdc-list-item__primary-text">Friday</span>
      <span class="mdc-list-item__secondary-text">
        <span
          data-target="time-sync.date"
          data-utc="<%= Time.zone.parse("10:00:00").utc.strftime("%s%L") %>"
          data-unicode-format="h aaa"
        >
          10 AM
        </span>
        -
        <span
          data-target="time-sync.date"
          data-utc="<%= Time.zone.parse("13:00:00").utc.strftime("%s%L") %>"
          data-unicode-format="h aaa"
        >
          1 PM
        </span>
        <span
          data-target="time-sync.date"
          data-utc="<%= Time.zone.now.utc.strftime("%s%L") %>"
          data-unicode-format="(zzz)"
        >(<%= zone %>)</span>
      </span>
    </span>
  </li>
  <li class="mdc-list-item">
    <span class="mdc-list-item__text">
      <span class="mdc-list-item__primary-text">Saturday - Sunday</span>
      <span class="mdc-list-item__secondary-text">
        Closed
      </span>
    </span>
  </li>
</ul>
